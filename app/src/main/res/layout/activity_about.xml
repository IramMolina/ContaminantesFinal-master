<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.jekot.myapplication.AboutActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="10dp"
        android:text="Aplicación desarrollada por alumnos del ITESM."/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15dp"
        android:text="OBJETIVO"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textAlignment="center"
        android:text="Desarrollar un sistema instrumental para medir contaminantes atmosféricos a diferentes alturas con el uso de microcontroladores y sensores, a partir de un sistema aéreo que logre la altura establecida y las mediciones necesarias."/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15dp"
        android:text="ACERCA DE"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textAlignment="center"
        android:text="Implementación de un dispositivo que pueda ascender hasta medio kilómetro de altura, mida la concentración de NO2, PM2.5, PM10 y que despliegue la información a un celular en tiempo real por medio de una aplicación para Android y en una página web. Esto último con el objetivo de alcanzar mayor cantidad de usuarios, entre estos los que no cuentan con sistema operativo Android en sus teléfonos. En la interfaz gráfica se puede encontrar información de la concentración de contaminantes y de la calidad del aire en IMECAS, así como ciertas condiciones atmosféricas como son temperatura, presión, altitud." />

    <android.support.v4.widget.Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:srcCompat="@mipmap/logo_grupo_investigacion"
        android:maxHeight="30dp"/>




</LinearLayout>
